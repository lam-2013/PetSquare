<header>
  <div class="fixed">
    <nav class="top-bar">
      <ul class="title-area">
        <%= link_to "PetSquare", root_path %>
        <li class="toggle-topbar menu-icon"><a href="#">Menu</a></li></ul>
        <section class="top-bar-section">
          <ul class="right">
            <% if signed_in? %>
                <li><%= link_to "#{current_user.name.upcase}", current_user %></li>
                <li><%= link_to "Home", root_path %></li>
                <li><%= link_to "My pets", pets_user_path(current_user) %></li>
                <li class="has-dropdown">
                  <a href="#">
                    Account <b class="caret"></b>
                  </a>
                  <ul class="dropdown">
                    <li><%= link_to "Profile", current_user %></li>
                    <li><%= link_to "Settings", edit_user_path(current_user) %></li>
                    <li>
                      <%= link_to "Sign out", signout_path, method: "delete" %>
                    </li>
                  </ul>
                </li>
            <% else %>
                <li><%= link_to "Sign in", signin_path %></li>
            <% end %>
          </ul>
        </section>

    </nav>
  </div>
  </div>
</header>